<ul class="p-4 flex flex-row ">
  <li>
    <%= link_to("Hello Rails", root_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
  </li>

  <li>
    <%= link_to("Friends", friends_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
  </li>

  <li>
    <%= link_to("About", home_about_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
  </li>

  <% if user_signed_in? %>
    <li class="ml-auto">
      <%= link_to("Edit Profile", edit_user_registration_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
    </li>

    <li>
      <%= link_to("Sign Out", destroy_user_session_path, { method: :delete, class: "p-2 hover:bg-white hover:text-black" }) %>
    </li>
  <% else %>
    <li class="ml-auto">
      <%= link_to("Sign Up", new_user_registration_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
    </li>

    <li>
      <%= link_to("Sign In", new_user_session_path, { class: "p-2 hover:bg-white hover:text-black" }) %>
    </li>
  <% end %>
</ul>
